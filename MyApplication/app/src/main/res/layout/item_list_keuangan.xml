<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp"
    android:orientation="vertical"
    android:id="@+id/layoutList"
    android:background="@drawable/blue"
    android:layout_margin="5dip">

    <!--<ImageView
       android:id="@+id/imageItem"
       android:layout_width="match_parent"
       android:layout_height="200dip"
       android:contentDescription="@string/app_name"
       android:layout_alignParentStart="true"
       android:layout_alignParentLeft="true"/>-->
    <TextView
        android:id="@+id/namaPemesan"
        style="@style/GlowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/jenisKaos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:background="#11000000"
        android:ellipsize="end"
        android:layout_below="@+id/namaPemesan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/jumlahOrder"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:textColorHint="@android:color/white"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:ellipsize="end"
        android:layout_below="@+id/jenisKaos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/keuntungan"
        android:background="#11000000"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumlahOrder"
        android:layout_alignLeft="@+id/jumlahOrder"
        android:layout_alignStart="@+id/jumlahOrder" />


</RelativeLayout>

