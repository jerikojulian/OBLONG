<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oblong.myapplication">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconblong"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.example.oblong.myapplication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.oblong.myapplication.MainActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.example.oblong.myapplication.DetailActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.example.oblong.myapplication.DetailKeuanganActivity"></activity>
    </application>

</manifest>